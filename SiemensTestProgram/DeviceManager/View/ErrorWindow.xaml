<Window x:Class="DeviceManager.View.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceManager.View"
        mc:Ignorable="d"
        Title="Error" Height="200" Width="300"
        Closing="WindowClosing"
        >
    <Grid>
        <Label Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="errorMsg"></Label>
        <Button Margin="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25" Width="100" Content="Exit" Click="ExitApplication"></Button>
    </Grid>
</Window>
